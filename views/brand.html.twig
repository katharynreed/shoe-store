{% extends 'template.html.twig' %}

{% block content %}
{% if brands is not empty %}
    {% for brand in brands %}
    <a href="/brands/{{brand.getId}}"><p>{{brand.getName}}</p></a>
    {% endfor %}
{% else %}
    <p>There are no brands in database.</p>
{% endif %}

<form action='/add_brand' method='post'>
    <label for='name'>Brand Name:</label>
    <input id='name' type="text" name="name" placeholder="Enter brand name here...">

    <button class="btn" type="submit" name="button">Add</button>
</form>
{% endblock %}
{% block link%}
<li><a href="/">Home</a></li>
{% endblock %}
