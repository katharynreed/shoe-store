{% extends 'template.html.twig' %}

{% block content %}
    {{brand.getName}}


    <form class="form-group" action="/brands/{{brand.getId}}/edit" method="post">
        <input name="_method" type="hidden" value="patch">

        <label for="name">Edit brand name:</label>
        <input id="name" name="name" type="text">

        <button class="btn" type="submit">Update!</button>
    </form>

    <form class="form-group" action="/brands/{{brand.getId}}/delete" method="post">
        <input name="_method" type="hidden" value="delete">
            <div class="btn-form">
                <button class="btn" type="submit">Delete this brand</button>
            </div>

{% endblock %}
